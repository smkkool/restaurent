<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>

    </style>
    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorWhite</item> <!-- Whatever color you want-->
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>


    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabTextAppearance">@style/MineCustomTabText</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_ratingbar_deactive</item>
        <item name="colorControlActivated">@color/color_ratingbar_active</item>
    </style>
    <style name="RatingBarDefault" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_ratingbar_deactive_default</item>
        <item name="colorControlActivated">@color/color_ratingbar_active_default</item>
    </style>
</resources>
